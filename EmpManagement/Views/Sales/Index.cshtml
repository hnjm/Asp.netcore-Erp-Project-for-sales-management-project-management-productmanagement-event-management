@model  EmpManagement.Models.Sales
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sales Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="Sales" asp-action="add">Add</a>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Sales List</h4>
        @Html.Partial("SearchIndex.cshtml", Model)
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>

                    <th>Id</th>
                    <th>Name</th>
                    <th>Rep</th>
                    <th>SalesStage</th>
                    <th>Priority</th>
                    <th>ExpectedCloseDate</th>
                    <th>ForeCastValue</th>
                    <th>Probability</th>
                    <th>LastContact</th>
                    <th>SignedSalesValue</th>
                    <th>Quantity</th>
                    <th>Notes</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Sales in ViewBag.Sales)
                {
                    <tr>
                        <td>@Sales.Id</td>
                        <td>@Sales.Name</td>
                        <td>@Sales.Rep</td>
                        <td>@Sales.SalesStage</td>

                        <td>@Sales.Priority</td>

                        <td>@Sales.ExpectedCloseDate</td>
                        <td>@Sales.ForeCastValue</td>
                        <td>@Sales.Probability</td>
                        <td>@Sales.LastContact</td>
                        <td>@Sales.SignedContractValue</td>
                        <td>@Sales.Quantity</td>

                        <td>@Sales.Notes</td>

                        <td>
                            <a asp-controller="Sales" asp-action="edit" asp-route-id="@Sales.Id">Edit</a>
                            |
                            <a asp-controller="Sales" asp-action="delete" asp-route-id="@Sales.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
</style>