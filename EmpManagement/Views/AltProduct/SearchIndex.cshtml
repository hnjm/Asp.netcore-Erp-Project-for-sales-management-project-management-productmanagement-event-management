@model PagedList.IPagedList<EmpManagement.Models.AltProduct>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Product List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>

</head>
<body>
    <div class="container" style="margin-top: 20px;">


        <form method="get" asp-controller="altproduct" asp-action="search">
            <input type="text" name="keyword" value="@ViewBag.keyword" />
            <input type="submit" value="Search" />
            @if (Model != null)
            {
                <h4 class="text-center text-uppercase">Product List</h4>
                <table class="table table-striped table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Project</th>
                            <th>RentedFrom</th>
                            <th>RentedTo</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var AltProduct in Model)
                        {
                            <tr>
                                <td>@AltProduct.Id</td>
                                <td>@AltProduct.Name</td>
                                <td>@AltProduct.Status</td>
                                <td>@AltProduct.Price</td>

                                <td>@AltProduct.Quantity</td>

                                <td>@AltProduct.Project</td>

                                <td>@AltProduct.RentedFrom</td>

                                <td>@AltProduct.RentedTo</td>

                                <td>
                                    <a asp-controller="AltProduct" asp-action="edit" asp-route-id="@AltProduct.Id">Edit</a>
                                    |
                                    <a asp-controller="AltProduct" asp-action="delete" asp-route-id="@AltProduct.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                                </td>


                            </tr>

                        }
                    </tbody>
                </table>
            }
        </form>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
</style>