
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Timeline Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="Timeline" asp-action="add">Add</a>
    <div></div><div></div>

    <a asp-controller="mainhome" asp-action="newindex">Index</a>

    <div></div><div></div>
    <a asp-controller="timeline" asp-action="index">Timeline View</a>

    <div></div><div></div>
    <h4 class="text-center text-uppercase">Timeline Objectives List</h4>
    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Objective</th>
                <th>Event</th>
                <th>Email</th>
                <th>Project</th>
                <th>Deadline</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Timeline in ViewBag.Timeline)
            {
                <tr>
                    <td>@Timeline.Id</td>
                    <td>@Timeline.Date</td>
                    <td>@Timeline.Objective</td>
                    <td>@Timeline.Event</td>

                    <td>@Timeline.Email</td>

                    <td>@Timeline.Project</td>

                    <td>@Timeline.Deadline</td>

                    <td>
                        <a asp-controller="Timeline" asp-action="edit" asp-route-id="@Timeline.Id">Edit</a>
                        |
                        <a asp-controller="Timeline" asp-action="delete" asp-route-id="@Timeline.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                    </td>


                </tr>

            }
        </tbody>
    </table>
    </div>
</body>
</html>
