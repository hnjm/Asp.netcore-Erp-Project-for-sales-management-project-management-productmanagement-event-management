@model PagedList.IPagedList<EmpManagement.Models.AltProject>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>

</head>
<body>
    <div class="container" style="margin-top: 20px;">


        <form method="get" asp-controller="altproject" asp-action="search">
            <input type="text" name="keyword" value="@ViewBag.keyword" />
            <input type="submit" value="Search" />
            @if (Model != null)
            {
                <h4 class="text-center text-uppercase">Project List</h4>
                <table class="table table-striped table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Category</th>
                            <th>Owner</th>
                            <th>Lead</th>
                            <th>Budget</th>
                            <th>Profit</th>

                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var AltProject in Model)
                        {
                            <tr>
                                <td>@AltProject.Id</td>
                                <td>@AltProject.Name</td>
                                <td>@AltProject.Status</td>
                                <td>@AltProject.Category</td>

                                <td>@AltProject.Owner</td>

                                <td>@AltProject.Lead</td>
                                <td>@AltProject.Budget</td>
                                <td>@AltProject.Profit</td>

                                <td>
                                    <a asp-controller="AltProject" asp-action="edit" asp-route-id="@AltProject.Id">Edit</a>
                                    |
                                    <a asp-controller="AltProject" asp-action="delete" asp-route-id="@AltProject.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                                </td>


                            </tr>

                        }
                    </tbody>
                </table>
            }
        </form>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
</style>