
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Evaluation Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <a asp-controller="Evaluation" asp-action="add">Add</a>
    <div></div><div></div>
    <a asp-controller="mainhome" asp-action="newindex">Index</a>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Evaluation Sales List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>

                    <th>Id</th>
                    <th>Name</th>
                    <th>Rep</th>
                    <th>SalesStage</th>
                    <th>Priority</th>
                    <th>ExpectedCloseDate</th>
                    <th>ForeCastValue</th>
                    <th>Probability</th>
                    <th>LastContact</th>
                    <th>SignedContractValue</th>
                    <th>Notes</th>

                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Evaluation in ViewBag.Evaluation)
                {
                    <tr>
                        <td>@Evaluation.Id</td>
                        <td>@Evaluation.Name</td>
                        <td>@Evaluation.Rep</td>
                        <td>@Evaluation.SalesStage</td>

                        <td>@Evaluation.Priority</td>

                        <td>@Evaluation.ExpectedCloseDate</td>
                        <td>@Evaluation.ForeCastValue</td>
                        <td>@Evaluation.Probability</td>
                        <td>@Evaluation.LastContact</td>
                        <td>@Evaluation.SignedContractValue</td>
                        <td>@Evaluation.Notes</td>

                        <td>
                            <a asp-controller="Evaluation" asp-action="edit" asp-route-id="@Evaluation.Id">Edit</a>
                            |
                            <a asp-controller="Evaluation" asp-action="delete" asp-route-id="@Evaluation.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                        </td>


                    </tr>

                }
            </tbody>
        </table>
    </div>
</body>
</html>
