@model PagedList.IPagedList<EmpManagement.Models.Client>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jacket Project List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>

</head>
<body>
    <div class="container" style="margin-top: 20px;">


        <form method="get" asp-controller="Client" asp-action="search">
            <input type="text" name="keyword" value="@ViewBag.keyword" />
            <input type="submit" value="Search" />
            @if (Model != null)
            {
                <h4 class="text-center text-uppercase">Client List</h4>
                <table class="table table-striped table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>HQ</th>
                            <th>Employees</th>
                            <th>Industry</th>
                            <th>Location</th>
                            <th>PrimaryContact</th>
                            <th>Objectives</th>
                            <th>Interactions</th>
                            <th>Contact</th>
                            <th>EmailAddress</th>

                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Client in Model)
                        {
                            <tr>
                                <td>@Client.Id</td>
                                <td>@Client.Name</td>
                                <td>@Client.HQ</td>
                                <td>@Client.Employees</td>

                                <td>@Client.Industry</td>

                                <td>@Client.Location</td>
                                <td>@Client.PrimaryContact</td>
                                <td>@Client.Objectives</td>
                                <td>@Client.Interactions</td>
                                <td>@Client.Contact</td>
                                <td>@Client.EmailAddress</td>

                                <td>
                                    <a asp-controller="Client" asp-action="edit" asp-route-id="@Client.Id">Edit</a>
                                    |
                                    <a asp-controller="Client" asp-action="delete" asp-route-id="@Client.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                                </td>


                            </tr>

                        }
                    </tbody>
                </table>
            }
        </form>
    </div>
</body>
</html>
<style>
    body {
        background: url('https://images.pexels.com/photos/1323712/pexels-photo-1323712.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500') no-repeat fixed center center;
        background-size: cover;
        font-family: Montserrat;
    }
</style>